<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpReader.Views.SettingsPage">
    <ContentPage.Content>
            <Frame Style="{StaticResource MyFrame}">
        <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Style="{StaticResource MyText}" Text="Изменить тему приложения" FontFamily="LatoMed" FontSize="20" HorizontalOptions="Start"/>
                    <Switch x:Name="SwitchTheme" Toggled="SwitchTheme_Toggled" HorizontalOptions="End" Margin="20,0,0,0" Scale="1.3" ></Switch>
                </StackLayout>
                
           
        </StackLayout>
            </Frame>
    </ContentPage.Content>
</ContentPage>